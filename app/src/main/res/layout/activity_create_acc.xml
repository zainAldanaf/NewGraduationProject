<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basicColor"
    tools:context=".Patients.CreateAccActivity"
    android:padding="16dp">

    <!-- Header Section -->
    <TextView
        android:id="@+id/header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account."
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Full Name Input -->
    <EditText
        android:id="@+id/nametxt"
        android:layout_width="384dp"
        android:layout_height="59dp"
        android:layout_marginTop="16dp"
        android:hint="Full Name"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="#B3B3B3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_text" />

    <!-- Email Input -->

    <EditText
        android:id="@+id/emailtxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="#B3B3B3"
        app:layout_constraintTop_toBottomOf="@id/nametxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Email"
        android:textColor="#FFFFFF" />

    <!-- Phone Number Input -->
    <EditText
        android:id="@+id/phonetxtt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="#B3B3B3"
        app:layout_constraintTop_toBottomOf="@id/emailtxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
            android:hint="Phone Number"
            android:textColor="#FFFFFF" />

    <!-- Password Input -->
    <EditText
        android:id="@+id/passwordtxt"
        android:layout_width="386dp"
        android:layout_height="57dp"
        android:layout_marginTop="16dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/white"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="#B3B3B3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phonetxtt" />


    <!-- Confirm Password Input -->
    <EditText
        android:id="@+id/confirm_passwordtxt"
        android:layout_width="382dp"
        android:layout_height="57dp"
        android:layout_marginTop="16dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="#B3B3B3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passwordtxt" />

    <!-- Agree to Terms Checkbox -->
    <CheckBox
        android:id="@+id/terms_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agree to terms and conditions"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/confirm_passwordtxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Sign Up Button -->
    <Button
        android:id="@+id/signup_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/terms_checkbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#E8E8E8"
        android:textColor="#1C1C1C" />

    <!-- Already Have an Account Text -->
    <TextView
        android:id="@+id/already_account_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account?"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/signup_button"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Sign In Text -->
    <TextView
        android:id="@+id/loginPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/already_account_text"
        app:layout_constraintStart_toEndOf="@id/already_account_text"
        android:layout_marginStart="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
